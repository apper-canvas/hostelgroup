{
  "/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be authenticated to access dashboard",
            "rule": "authenticated"
          }
        ],
        "operator": "OR"
      },
      "redirectOnDeny": "/login"
    }
  },
  "/login": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Login page is public",
            "rule": "public"
          }
        ],
        "operator": "OR"
      },
      "excludeRedirectQuery": true
    }
  },
